<div class="min-h-screen flex flex-col">
  <div class="flex-1 flex items-center justify-center px-4 py-0 sm:px-6 lg:px-8">
    <div class="max-w-sm w-full h-full p-6">
      <div class="bg-white p-4 rounded-lg border border-gray-200 shadow-sm mb-4">
        <p class="text-sm font-medium text-gray-900">
          <div class="text-md text-gray-850 font-medium">current season:</div>
          <div class="font-extrabold text-[2.5rem] tracking-wider text-gray-950 leading-none">
            Rainy/Cool
          </div>
        </p>

        <div class="mt-4">
          <p class="text-sm text-gray-500 mb-2">Round 1</p>
          <h3 class="text-md text-gray-850 font-medium mb-2">Crop Yields:</h3>
          <form phx-submit="submit_response" class="space-y-4">
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-white">
                <div class="flex justify-between items-center mb-2">
                  <span class="text-md text-gray-700 font-medium">Wecool</span>
                  <span class="text-lg font-semibold text-green-600">(100%)</span>
                </div>
                <select
                  name="Wecool"
                  id="Wecool"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                  phx-hook="UpdateTotalFields"
                >
                  <option value="0">0 fields</option>
                  <option value="1">1 field</option>
                  <option value="2">2 fields</option>
                  <option value="3">3 fields</option>
                  <option value="4">4 fields</option>
                </select>
              </div>
              <div class="bg-white">
                <div class="flex justify-between items-center mb-2">
                  <span class="text-md text-gray-700 font-medium">Wecool</span>
                  <span class="text-lg font-semibold text-green-600">(100%)</span>
                </div>
                <select
                  name="Wecool"
                  id="Wecool"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                  phx-hook="UpdateTotalFields"
                >
                  <option value="0">0 fields</option>
                  <option value="1">1 field</option>
                  <option value="2">2 fields</option>
                  <option value="3">3 fields</option>
                  <option value="4">4 fields</option>
                </select>
              </div>
              <div class="bg-white">
                <div class="flex justify-between items-center mb-2">
                  <span class="text-md text-gray-700 font-medium">Wecool</span>
                  <span class="text-lg font-semibold text-green-600">(100%)</span>
                </div>
                <select
                  name="Wecool"
                  id="Wecool"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                  phx-hook="UpdateTotalFields"
                >
                  <option value="0">0 fields</option>
                  <option value="1">1 field</option>
                  <option value="2">2 fields</option>
                  <option value="3">3 fields</option>
                  <option value="4">4 fields</option>
                </select>
              </div>
              <div class="bg-white">
                <div class="flex justify-between items-center mb-2">
                  <span class="text-md text-gray-700 font-medium">Wecool</span>
                  <span class="text-lg font-semibold text-green-600">(100%)</span>
                </div>
                <select
                  name="Wecool"
                  id="Wecool"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                  phx-hook="UpdateTotalFields"
                >
                  <option value="0">0 fields</option>
                  <option value="1">1 field</option>
                  <option value="2">2 fields</option>
                  <option value="3">3 fields</option>
                  <option value="4">4 fields</option>
                </select>
              </div>
            </div>
            <div class="pt-4 border-t border-gray-200">
              <div class="flex justify-between items-center mb-4">
                <span class="text-md text-gray-850 font-medium">Total Fields:</span>
                <span class="text-green-600 font-bold" id="total-fields">0</span>
              </div>
              <button
                type="submit"
                id="submit-button"
                class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-gray-950 hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"
              >
                Submit Fields
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="bg-white p-4 rounded-lg border border-gray-200 shadow-sm mb-4">
      <p class="text-sm font-medium text-gray-900">
        <div class="text-md text-gray-850 font-medium">current season:</div>
        <div class="font-extrabold text-[2.5rem] tracking-wider text-gray-950 leading-none">
          Rainy/Cool
        </div>
      </p>
      
<!-- Chart Section -->
      <div class="mt-6">
        <h3 class="text-md text-gray-850 font-medium mb-4">Seasonal Trends</h3>
        <div class="h-48 flex items-end space-x-2">
          <!-- Spring -->
          <div class="flex-1 flex flex-col items-center">
            <div class="w-full bg-blue-200 rounded-t" style="height: 60%"></div>
            <span class="text-xs text-gray-600 mt-2">Spring</span>
          </div>
          <!-- Summer -->
          <div class="flex-1 flex flex-col items-center">
            <div class="w-full bg-yellow-200 rounded-t" style="height: 90%"></div>
            <span class="text-xs text-gray-600 mt-2">Summer</span>
          </div>
          <!-- Fall -->
          <div class="flex-1 flex flex-col items-center">
            <div class="w-full bg-orange-200 rounded-t" style="height: 70%"></div>
            <span class="text-xs text-gray-600 mt-2">Fall</span>
          </div>
          <!-- Winter -->
          <div class="flex-1 flex flex-col items-center">
            <div class="w-full bg-blue-100 rounded-t" style="height: 40%"></div>
            <span class="text-xs text-gray-600 mt-2">Winter</span>
          </div>
        </div>
        <div class="mt-4 flex justify-between text-xs text-gray-500">
          <span>Temperature Range</span>
          <span>Precipitation</span>
        </div>
      </div>
    </div>
  </div>
</div>
